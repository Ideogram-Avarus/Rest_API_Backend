{
  "compilerOptions": {
      "target": "ES6",                   
      "module": "CommonJS",              
      "outDir": "./dist",               
      "rootDir": ".",                
      "strict": true,                     
      "esModuleInterop": true,            
      "skipLibCheck": true,              
      "forceConsistentCasingInFileNames": true, 
      "baseUrl": ".",
      "paths": {
          "@/*": ["./src/*"]        
      }
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist", "tests"]
}